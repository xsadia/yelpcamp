<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 class="form-header">Create a new campground!</h1>
            <div class="form-div">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="campname">Campground Name</label>
                    <input id="campname" class="form-control" type="text" name="name" placeholder="Campground name">
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input id="price" class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
              </div>
                <div class="form-group">
                    <label for="campImage">Campground Image</label>
                    <input id="campImage" class="form-control" type="text" name="img" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="campDes">Description</label>
                    <input id="campDesc" class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
            </div>
        </div>
    </div>

    
<%- include("../partials/footer") %>